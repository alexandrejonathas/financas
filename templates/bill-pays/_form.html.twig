<form method="post" action="{{ action }}">
    <div class="form-group">
        <label class="control-label">Centro de custo</label>
        <select class="form-control" name="category_cost_id" value="{{ pay.category_cost_id }}" >
            {% for category in categories %}
                <option value="{{ category.id }}" {{ pay.category_cost_id is not null and pay.category_cost_id == category.id?'selected="selected"': "" }}>
                    {{ category.name }}
                </option>
            {% endfor %}
        </select>
    </div>

    <div class="form-group">
        <label class="control-label">Data de Lan√ßamento</label>
        <input class="form-control" type="text" placeholder="DD/MM/YYYY"
               name="date_launch" value="{{ pay.date_launch|date('d/m/Y') }}">
    </div>
    <div class="form-group">
        <label class="control-label">Nome</label>
        <input class="form-control" type="text" placeholder="Nome"
               name="name" value="{{ pay.name }}">
    </div>
    <div class="form-group">
        <label class="control-label">Valor</label>
        <input class="form-control" type="text" placeholder="Valor"
               name="value" value="{{ pay.value|number_format(2,',','.') }}">
    </div>
    <button type="submit" class="btn btn-primary btn-block">
        <span class="glyphicon glyphicon-{{ submitIcon }}"></span>
    </button>
</form>