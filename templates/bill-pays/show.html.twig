{% extends 'layout.html.twig' %}

{% block content %}
    <div class="container">
        <div class="row">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <h3 class="panel-title">
                        Ver despesa
                    </h3>
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-md-12">
                            <a href="{{ route('bill-pays.edit', {'id': pay.id}) }}" class="btn btn-primary">
                                <span class="glyphicon glyphicon-pencil"></span>
                            </a>
                            <a href="{{ route('bill-pays.delete', {'id': pay.id}) }}" class="btn btn-danger">
                                <span class="glyphicon glyphicon-remove"></span>
                            </a>
                        </div>
                    </div>
                    <br />
                    <div class="row">
                        <div class="col-md-12">
                            <table class="table table-bordered">
                                <tbody>
                                    <tr>
                                        <th scope="row">#</th>
                                        <td>{{ pay.id }}</th>
                                    </tr>
                                    <tr>
                                        <th scope="row">Centro de custo</th>
                                        <td>{{ pay.categoryCost.name }}</th>
                                    </tr>
                                    <tr>
                                        <th scope="row">Data Lanc.</th>
                                        <td>{{ pay.date_launch|date("d/m/Y") }}</th>
                                    </tr>
                                    <tr>
                                        <th scope="row">Nome</th>
                                        <td>{{ pay.name }}</th>
                                    </tr>
                                    <tr>
                                        <th scope="row">Valor</th>
                                        <td>{{ pay.value|number_format(2,',','.') }}</th>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}